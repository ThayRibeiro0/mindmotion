{
  "name": "mindmotion",
  "version": "1.0.0",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev": "vite --port 3000",
    "dev:server": "ts-node server/src/index.ts",
    "dev:client": "cd client && npm run dev"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "dependencies": {
    "axios": "^1.8.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "express": "^5.1.0",
    "sequelize": "^6.37.7",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "vite": "^6.2.5",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9"
  }
}
